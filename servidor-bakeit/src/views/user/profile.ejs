<!DOCTYPE html>
<html>
<%- include("../partials/head",{titulo:"Bakeit",css:"profile.css"}); -%>

    <body>
        <%- include('../partials/header') %>
            <main>
                <div class="centrar mt-5 mb-3">
                    <h2 data-aos="fade-left">Mi perfil</h2>
                </div>
                
                <div class="contenedor-info my-3">
                    <div>
                        <img data-aos="fade-left" class="profile-image" src="/media/avatars/<%= usuario.imagen.url %>">
                    </div>

                    <div class="profile-info">
                        <p data-aos="fade-left">
                            Nombre:
                            <%= usuario.nombre %> <br> Apellido:
                                <%= usuario.apellidos %> <br> Correo:
                                    <%= usuario.correo %> <br> Fecha de Nacimiento:
                                        <%= usuario.fecha_nacimiento %> <br>
                        </p>

                    </div>
                </div>

                <div class="centrar mt-5 mb-3">
                    <a data-aos="fade-left" class="boton" href="/user/update/<%= usuario.id %>">Editar Perfil</a>
                </div>

            </main>
            <%- include('../partials/footer') %>
    </body>

</html>